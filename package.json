{
  "name": "giftsync",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "19.2.1",
      "react-dom": "19.2.1"
    }
  },
  "scripts": {
    "dev": "turbo dev --filter=@giftsync/web",
    "dev:web": "turbo dev --filter=@giftsync/web",
    "dev:mobile": "turbo dev --filter=@giftsync/mobile",
    "build": "turbo build",
    "build:web": "turbo build --filter=@giftsync/web",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next apps/*/.turbo .turbo",
    "clean:turbo": "rm -rf .turbo apps/*/.turbo packages/*/.turbo"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=20"
  }
}
